---
const collections = [
	{
		slug: "iphone 14 pro",
		name: "iPhone 14 Pro",
	},
	{
		slug: "playstation5",
		name: "Playstation5",
	},
	{
		slug: "solaranlage balkonkraftwerk",
		name: "Solaranlage Balkon",
	},
	{
		slug: "Air Pods Pro 2",
		name: "Air Pods Pro 2",
	},
	{
		slug: "Samsung Galaxy",
		name: "Samsung Galaxy",
	},
	{
		slug: "iPhone 14 Panzerglasfolie",
		name: "iPhone 14 Panzerglasfolie",
	},
];

---
<div class="container mx-auto py-2 px-4 md:px-6">
    <h2 class="text-big font-medium mb-4">Most searched</h2>
    <ul class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 bg-white border border-slate-200 rounded-sm">
        {collections.map((collection) => (
            <li
                class="w-full flex items-center justify-center text-center p-8 border-l border-t border-slate-200"
            >
                <a href={`/search?s=${collection.slug}`} class="relative group px-2">
                    <span class="bg-teal-500 h-0 w-full absolute bottom-0 left-0 group-hover:h-3 transition-all ease-out duration-400"></span>
                    <span class="relative tracking-wider font-medium">{collection.name}</span>
                </a>
            </li>
        ))}
    </ul>
</div>